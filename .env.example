# Server Configuration
MCP_SERVER_MODE=stdio  # Options: 'stdio' or 'http'
MCP_HTTP_PORT=3000
MCP_HTTP_HOST=localhost

# Atlassian Credentials
# Note: When using VS Code, these can be provided through the VS Code input system
# instead of setting them in this file.
JIRA_HOST=https://your-company.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-api-token
USER_ACCOUNT_ID=your-account-id

# Project Configuration
JIRA_CPPF_PROJECT=CPPF
JIRA_CRE_PROJECT=CRE
USER_ROLE=fullstack  # Options: web, backend, app, ios, fullstack
PLATFORMS=web,backend,app,ios

# Confluence Configuration
CONFLUENCE_SPACES=PROD,ENG,DESIGN
SPRINT_PLANNING_SPACE=~629041681a437e007044041e

# Sprint Configuration
SPRINT_AUTO_DETECTION=true
SPRINT_CACHE_EXPIRY=900000  # 15 minutes in ms

# Logging
LOG_LEVEL=info  # Options: debug, info, warn, error
